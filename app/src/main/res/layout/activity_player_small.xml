<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:opencv="http://schemas.android.com/apk/res-auto">

    <org.opencv.android.JavaCameraView
        android:id="@+id/player_CameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        opencv:show_fps="true">
    </org.opencv.android.JavaCameraView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.vr.sdk.widgets.pano.VrPanoramaView
            android:id="@+id/player_Vrpanoramaview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        </com.google.vr.sdk.widgets.pano.VrPanoramaView>

        <RelativeLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

            <Button
                android:id="@+id/Button_1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:shape="rectangle"
                android:layout_marginStart="50dp"
                android:layout_marginVertical="20dp"
                android:background="#96000000"
                android:onClick="button_click"
                android:layout_alignParentStart="true"
                android:text="@string/button_txt_off">
            </Button>

            <Button
                android:id="@+id/Button_2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:shape="rectangle"
                android:layout_margin="20dp"
                android:background="#96000000"
                android:onClick="button_click"
                android:layout_centerHorizontal="true"
                android:text="@string/button_txt_off">
            </Button>

            <Button
                android:id="@+id/Button_3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:shape="rectangle"
                android:layout_marginEnd="50dp"
                android:layout_marginVertical="20dp"
                android:background="#96000000"
                android:onClick="button_click"
                android:layout_alignParentEnd="true"
                android:text="@string/button_txt_off">
            </Button>
        </RelativeLayout>

        <RelativeLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/Button_4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:shape="rectangle"
                android:layout_marginStart="50dp"
                android:layout_marginVertical="20dp"
                android:background="#96000000"
                android:onClick="button_click"
                android:layout_alignParentStart="true"
                android:text="@string/button_txt_off">
            </Button>

            <Button
                android:id="@+id/Button_5"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:shape="rectangle"
                android:layout_margin="20dp"
                android:background="#96000000"
                android:onClick="button_click"
                android:layout_centerHorizontal="true"
                android:text="@string/button_txt_off">
            </Button>

            <Button
                android:id="@+id/Button_6"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:shape="rectangle"
                android:layout_marginEnd="50dp"
                android:layout_marginVertical="20dp"
                android:background="#96000000"
                android:onClick="button_click"
                android:layout_alignParentEnd="true"
                android:text="@string/button_txt_off">
            </Button>
        </RelativeLayout>

        <RelativeLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            >

            <Button
                android:id="@+id/Button_7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:shape="rectangle"
                android:layout_marginStart="50dp"
                android:layout_marginVertical="20dp"
                android:background="#96000000"
                android:onClick="button_click"
                android:layout_alignParentStart="true"
                android:text="@string/button_txt_off">
            </Button>

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/alignment_marker_color"
                android:indeterminate="false" />

            <Button
                android:id="@+id/Button_9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:shape="rectangle"
                android:layout_marginEnd="50dp"
                android:layout_marginVertical="20dp"
                android:background="#96000000"
                android:onClick="button_click"
                android:layout_alignParentEnd="true"
                android:text="@string/button_txt_off">
            </Button>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/PointerCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pointer_circle"
        opencv:layout_constraintStart_toStartOf="parent"
        opencv:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" />

</android.support.constraint.ConstraintLayout>